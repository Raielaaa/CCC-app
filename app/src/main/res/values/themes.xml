<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CCCLibraryapp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/Theme.color</item>
    </style>

    <style name="Theme.CCCLibraryapp" parent="Base.Theme.CCCLibraryapp" />


    <!-- For ImageView at fragment_login -->
    <style name="uiAccountLoginImageBG" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">@dimen/_150sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_150sdp</item>
    </style>

    <!-- For ImageView at fragment_clicked_book -->
    <style name="fragmentClickedBookMainImageBG" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_30sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_30sdp</item>
    </style>

    <style name="MyFloatingActionButtonStyle">
        <item name="android:background">@drawable/login_actionbutton_bg</item>
        <!-- Other attributes as needed -->
    </style>
    
    <!-- Animation for dialog -->
    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    
    <style name="ThemeOverlay.AppCompat.navTheme">
        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/Theme.color</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/Theme.color.light</item>
        <item name="android:checkable">true</item>
    </style>

    <!-- Home BottomSheetDialog -->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">500dp</item>
    </style>
</resources>